{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {% if chart is defined %}
        <div id="myChart"></div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% if chart is defined %}
        {{ chart|raw }}
    {% endif %}
{% endblock %}

{% block form %}

    <span class="lead">Daten</span>
    <hr class="mt-1"/>
    <div class="p-2 bg-light">
        <table class="table make-dt">
            <thead>

            <tr>
                <th rowspan="2">Produkt</th>
                <th rowspan="2">Konfiguration</th>

                <th colspan="4">Spannung</th>
                <th colspan="3">Funkenintensität</th>

                <th>Stromstärke</th>
                <th>Temperatur</th>

                <th rowspan="2"></th>
            </tr>
            <tr>
                <th>Obere Grenze</th>
                <th>Hysterese</th>
                <th>Startwert</th>
                <th>Schrittweite Änderung</th>

                <th>Grenze</th>
                <th>Hysterese</th>
                <th>Schwellwert</th>

                <th>Untere Grenze</th>

                <th>Maximum</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                {% for config in article.configList %}
                    <tr>
                        <td>{{ article.name }}</td>
                        <td>{{ config.overlayText }}</td>

                        <td>{{ config.voltageLimit }}</td>
                        <td>{{ config.voltageHysteresis }}</td>
                        <td>{{ config.voltageStart }}</td>
                        <td>{{ config.voltageStep }}</td>

                        <td>{{ config.intensityLimit }}</td>
                        <td>{{ config.intensityHysteresis }}</td>
                        <td>{{ config.intensityThreshold }}</td>

                        <td>{{ config.currentLimit }}</td>

                        <td>{{ config.temperatureMaximum }}</td>

                        <td class="text-right">

                            <table>
                                <thead>
                                    <tr>
                                        <th>Von</th>
                                        <th>Bis</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for process in processes %}
                                        {% if( process.article == article.id and process.config == config.id ) %}
                                    <tr>
                                        <td>
                                            {{ process.min|date('d.m.Y H:i:s') }}
                                        </td>
                                        <td>
                                            {{ process.max|date('d.m.Y H:i:s') }}
                                        </td>
                                        <td>

                                            <a href="{{ path('graph.chart', {'id': process.process}) }}"
                                               class="btn btn-sm btn-success">Visualisieren</a>

                                        </td>
                                    </tr>
                                        {% endif %}
                                    {% endfor %}
                                </tbody>
                            </table>

                        </td>
                    </tr>
                {% endfor %}
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

